# Production build settings for Vercel (pnpm)
# Works with pnpm for deterministic builds

# Reduce noise / speed up CI
audit=false
fund=false
progress=false

# Dependency resolution (pnpm compatible)
legacy-peer-deps=true
auto-install-peers=true
strict-peer-dependencies=false

# Network stability for CI
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=60000
