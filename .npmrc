# Production build settings for Vercel
# DO NOT disable optional deps - Rollup requires native binaries

# Reduce noise / speed up CI
audit=false
fund=false
progress=false

# Dependency safety
legacy-peer-deps=true

# Network stability
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=60000
